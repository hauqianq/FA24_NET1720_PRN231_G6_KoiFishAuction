@model IEnumerable<KoiFishAuction.Common.ViewModels.AuctionSession.AuctionSessionViewModel>

@{
    ViewBag.Title = "Koi Fish Auction Sessions";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Koi Fish Auction Sessions</h2>
        <a href="@Url.Action("Create", "AuctionSession")" class="btn btn-primary">Create New Auction Session</a>
    </div>

    <!-- Toast Notification -->
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div id="toastMessage" class="toast-message">
            @ViewBag.Message
        </div>
    }

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Koi Fish Name</th>
                <th>Price</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var session in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Details", "AuctionSession", new { id = session.Id })" class="text-decoration-none">
                            @session.Name
                        </a>
                    </td>
                    <td>@session.KoiFishName</td>
                    <td>@session.Price.ToString("C")</td>
                    <td>@session.StartTime.ToString("f")</td>
                    <td>@session.EndTime.ToString("f")</td>
                    <td>
                        <span class="badge
                            @(session.Status == KoiFishAuction.Data.Enumerrations.AuctionSessionStatus.Opening.ToString() ? "bg-success" :
                              session.Status == KoiFishAuction.Data.Enumerrations.AuctionSessionStatus.Closed.ToString() ? "bg-danger" :
                              "bg-secondary")">
                            @session.Status
                        </span>
                    </td>
                    <td>
                        <a href="@Url.Action("Update", "AuctionSession", new { id = session.Id })" class="btn btn-sm btn-warning">Update</a>
                        <a href="@Url.Action("Delete", "AuctionSession", new { id = session.Id })" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Toast CSS */
    .toast-message {
        position: fixed;
        top: 20px;
        right: 20px;
        background-color: #28a745;
        color: white;
        padding: 15px;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        opacity: 1;
        transition: opacity 0.5s ease;
        z-index: 1000;
    }
</style>

<script>
    // Toast JavaScript
    window.onload = function() {
        var toast = document.getElementById("toastMessage");
        if (toast) {
            // Hide toast after 3 seconds
            setTimeout(function() {
                toast.style.opacity = "0";
                setTimeout(function() { toast.remove(); }, 500); // Remove element after fade-out
            }, 3000);
        }
    };
</script>
