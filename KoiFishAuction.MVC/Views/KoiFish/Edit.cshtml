@model KoiFishAuction.Common.ViewModels.KoiFish.KoiFishDetailViewModel

@{
    ViewData["Title"] = "Edit KoiFish";
}

<h2 class="mb-4">Edit KoiFish</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="row">
        <!-- Cột bên trái hiển thị các trường thông tin của KoiFish -->
        <div class="col-md-6">
            <!-- Tên KoiFish -->
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Mô tả -->
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Giá khởi điểm -->
            <div class="form-group">
                <label asp-for="StartingPrice" class="control-label">Starting Price</label>
                <input asp-for="StartingPrice" class="form-control" />
                <span asp-validation-for="StartingPrice" class="text-danger"></span>
            </div>

            <!-- Giá hiện tại -->
            <div class="form-group">
                <label asp-for="CurrentPrice" class="control-label">Current Price</label>
                <input asp-for="CurrentPrice" class="form-control" />
                <span asp-validation-for="CurrentPrice" class="text-danger"></span>
            </div>

            <!-- Tuổi -->
            <div class="form-group">
                <label asp-for="Age" class="control-label">Age (years)</label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <!-- Xuất xứ -->
            <div class="form-group">
                <label asp-for="Origin" class="control-label">Origin</label>
                <input asp-for="Origin" class="form-control" />
                <span asp-validation-for="Origin" class="text-danger"></span>
            </div>
        </div>

        <!-- Cột bên phải hiển thị các trường về kích thước, mẫu màu và ảnh -->
        <div class="col-md-6">
            <!-- Cân nặng -->
            <div class="form-group">
                <label asp-for="Weight" class="control-label">Weight (kg)</label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>

            <!-- Chiều dài -->
            <div class="form-group">
                <label asp-for="Length" class="control-label">Length (cm)</label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>

            <!-- Mẫu màu -->
            <div class="form-group">
                <label asp-for="ColorPattern" class="control-label">Color Pattern</label>
                <input asp-for="ColorPattern" class="form-control" />
                <span asp-validation-for="ColorPattern" class="text-danger"></span>
            </div>

            <!-- Hiển thị các hình ảnh hiện tại của KoiFish -->
            <div class="form-group">
                <label>Current Images</label>
                <div class="row">
                    @foreach (var image in Model.Images)
                    {
                        <div class="col-md-4 text-center mb-3">
                            <img src="@image" class="img-fluid rounded mb-2" alt="Koi Image" />
                            <div>
                                <label>
                                    <input type="checkbox" name="ImageUrls" value="@image" checked /> Keep this image
                                </label>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Thêm ảnh mới -->
            <div class="form-group">
                <label for="newImages">Add New Images</label>
                <input type="file" name="newImages" class="form-control-file" multiple />
            </div>
        </div>
    </div>

    <!-- Nút Submit và Cancel -->
    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary">Update KoiFish</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
